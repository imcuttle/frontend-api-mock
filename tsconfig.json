    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "types",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "test", "__tests__"]
}
